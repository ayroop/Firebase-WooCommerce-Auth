# === WordPress & WooCommerce Plugin .gitignore ===

# Log files and databases
*.log
*.sql
*.sqlite

# System files
.DS_Store
Thumbs.db
ehthumbs.db
Icon?
desktop.ini

# OS Trash/Temporary files
*.swp
*.swo
*.tmp
*.bak

# PHPStorm/VSCode/Editor/IDE files
.idea/
.vscode/
*.sublime-workspace
*.sublime-project

# Composer
/vendor/
/composer.lock

# Node modules & output
/node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Build artifacts
/dist/
/build/
/coverage/
/.env
.env.local
.env.*

# WordPress-specific
wp-config.php
wp-content/uploads/
wp-content/cache/
wp-content/upgrade/

# Plugin zipped releases
*.zip

# Asset sources (unbuilt, e.g. SASS)
*.scssc

# Ignore package-lock.json if not using npm
package-lock.json

# Ignore local configuration
local-config.php

# Sensitive or custom config
firebase-config.json

# Qodo workspace/folder (should not be uploaded)
.qodo/
